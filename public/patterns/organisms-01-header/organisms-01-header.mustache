<div class="header">
  <div class="va-notice--banner">
    <div class="row full">
      <div class="small-12 message">
        <p><strong>This site is a <a href=
        "https://www.vets.gov/playbook/design/" target="_blank">work in
        progress.</a></strong> If you don’t find what you need, visit
        <a href="http://www.va.gov" target="_blank">VA.gov</a>.</p>
      </div>
    </div>
  </div><!-- /header alert box -->
  <div class="row full">
    <div class="small-6 medium-4 columns">
      <h1 class="va-header-logo" role="banner"><a href="/">Vets.gov</a></h1>
    </div><!-- Mobile search button -->
    <!-- htmllint attr-bans="[]" id-no-dup="false" -->
    <div class="hide-for-medium-up search-button">
      <button aria-controls="mobile-menu" aria-flowto="mobile-menu" class=
      "va-overlay-trigger va-mobile-searchtrigger usa-button usa-button-outline-inverse"
      data-show="#mobile-menu">Search</button>
    </div>
    <div class="va-overlay" id="mobile-menu" role="dialog">
      <div class="medium-5 medium-offset-3 text-right columns">
        <button aria-label="close search form - mobile only" class=
        "va-mobile-searchclose va-overlay-close" type="button">Close</button>
        <div class="menu">
          <form accept-charset="UTF-8" action=
          "https://search.vets.gov/search" id="search_form" method="get"
          name="search_form">
            <!-- htmllint attr-bans="[]" -->
            <div style="margin:0;padding:0;display:inline">
              <input name="utf8" type="hidden" value="✓">
            </div><!-- htmllint attr-bans="$previous" -->
            <input id="affiliate" name="affiliate" type="hidden" value=
            "vets.gov_search"> <label for="mobile-query">Search:</label>
            <div class="row collapse">
              <div class="small-9 columns">
                <input aria-autocomplete="list" aria-haspopup="true"
                autocomplete="off" class=
                "usagov-search-autocomplete ui-autocomplete-input" id=
                "mobile-query" name="query" role="textbox" type="text">
              </div>
              <div class="small-3 columns">
                <input name="commit" type="submit" value="Search">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div><!-- htmllint attr-bans="$previous" id-no-dup="$previous" -->
    <div class="text-right columns" id="login-root"></div>
  </div>
</div>
